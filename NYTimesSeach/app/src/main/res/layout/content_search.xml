<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.codepath.nytimesseach.SearchActivity"
    tools:showIn="@layout/activity_search">


    <EditText
        android:id="@+id/queryEditText"
        android:layout_width="302dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="@string/enter_search_query"
        android:inputType="text|textPersonName"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="87dp"
        android:layout_height="47dp"
        android:text="@string/search_button_text"
        tools:layout_editor_absoluteX="302dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/queryEditText"
        android:layout_toEndOf="@+id/queryEditText" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/resultsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/queryEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
