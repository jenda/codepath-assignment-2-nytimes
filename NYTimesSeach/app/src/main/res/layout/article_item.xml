<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/article_item_padding"
    android:background="@drawable/article_border"
    android:layout_margin="@dimen/article_outer_layout_margin">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_view_size"
        tools:text="So Many People Want to See the Tommies and the Johnnies" />

    <ImageView
        android:id="@+id/previewImaveVIew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/newsDeskTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/news_desk_text_size"
        android:textColor="@color/offWhite"
        android:background="@color/toolbarBackground"
        android:textAllCaps="true"
        android:layout_margin="@dimen/news_desk_margin"
        android:layout_marginLeft="@dimen/news_desk_left_margin"
        android:padding="@dimen/news_desk_padding"
        tools:text="Sports" />

    <TextView
        android:id="@+id/snippetTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="A record crowd of more than 35,000 is expected for Saturday’s football game between the Minnesota rivals St. John’s and St. Thomas at the Twins’ ballpark." />
</LinearLayout>